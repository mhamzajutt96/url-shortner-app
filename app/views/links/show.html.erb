<h3>Link <%= @link.slug %> Details</h3>
<hr>
<p>
  <strong>Url:</strong>
  <%= @link.url %>
</p>
<p>
  <strong>Short Url:</strong>
  <%= @link.shorten %>
</p>
<p>
  <strong>Slug:</strong>
  <%= @link.slug %>
</p>
<p>
  <strong>Clicked:</strong>
  <%= @link.clicked %> <%= @link.clicked > 1 ? 'times' : 'time' %>
</p>
