<h1>Links</h1>
<table class="table">
  <thead>
    <tr>
      <th>Url</th>
      <th>Slug</th>
      <th>Total Clicked</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>
        <td><%= link.slug %></td>
        <td><%= link.clicked %></td>
        <td><%= link_to 'Show', short_path(link.slug) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Link', new_link_path %>
