<h1>Links</h1>
<table class="table">
  <thead>
    <tr>
      <th>Original Url</th>
      <th>Short Url</th>
      <th>Total Clicked</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.original_url %></td>
        <td><%= link_to request.host + '/' + link.short_url, "/#{link.short_url}" %></td>
        <td><%= link.clicked %></td>
        <td><%= link_to 'Show', shortened_path(short_url: link.short_url), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Link', new_link_path, class: 'btn btn-primary btn-sm' %>
